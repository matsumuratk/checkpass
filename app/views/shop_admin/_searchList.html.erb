      <%= form_tag '', :onsubmit=>"set_checkin_item('#{place.name}','#{place.category}','#{place.country}','#{place.state}','#{place.city}','#{place.street}','#{place.name}','#{place.id}','#{place.link}');location.hash='input_top';return false;" do |f| %>
        <%= submit_tag '選択する' %>
      <% end %>
-->
      </td>
    </tr>
    <% end %>

  </table>
</div>
