<% @checkin_url="http://fbapp.evangelize.jp/checkins/place/" %>
<script type="text/javascript">
function set_checkin_item(fbName,fbCategory,fbCountry,fbState,fbCity,fbStreet,title,fbCheckinId,fbLink) {
  $("#fbName").attr("value",fbName);
  $("#fbCategory").attr("value",fbCategory);
  $("#fbCountry").attr("value",fbCountry);
  $("#fbState").attr("value",fbState);
  $("#fbCity").attr("value",fbCity);
  $("#fbStreet").attr("value",fbStreet);
  $("#fbTitle").attr("value",title);
  $("#fbCheckinId").attr("value",fbCheckinId);
  $("#fbLink").attr("value",fbLink);  
  
  return false;
}
</script>
<p>作成するFacebookチェックインスポットを選択してください。</p>
<div>
  <table border="1" height="100">
    <tr>
      <th class="name">登録名称</th>
      <th class="category">Category</th>
      <th class="country">Country</th>
      <th class="state">State</th>
      <th class="city">City</th>
      <th class="street">Street</th>
      <th class="checkinQr">CheckinId</th>
      <th class="link">Facebookページへのリンク</th>
      <th class="save"></th>
    </tr>

    <% @places.each_with_index do |place, cnt| %>
    <tr>
      <td class="name"><%= place.name %></td>
      <td class="category"><%= place.category %></td>
      <td class="country"><%= place.country %></td>
      <td class="state"><%= place.state %></td>
      <td class="city"><%= place.city %></td>
      <td class="street"><%= place.street %></td>
      <td class="id"><%= place.id %><%= noCheckinPlace(place)%></td>
      <td class="link"><%= link_to "#{place.link}","#{place.link}", :target=>'_blank' %></td>
      <td class="save">
      <%= link_chekinPlace(place) %>
      </td>
    </tr>
    <% end %>

  </table>
</div>
