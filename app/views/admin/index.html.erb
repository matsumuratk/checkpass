<h1>Listing shops</h1>

<table>
  <tr>
    <th>利用者のFaceBook名</th>
    <th>ショップ名</th>
    <th>管理者名</th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.fbName %></td>
    <td><%= shop.shop_name %></td>
    <td><%= shop.manager_name %></td>
    <td><%= link_to 'Show', show_shop_admin_path(shop.fbUserId) %></td>
    <td><%= link_to 'Edit', edit_shop_admin_path(shop.fbUserId) %></td>
  </tr>
<% end %>
</table>



